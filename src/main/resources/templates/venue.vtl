<h1>Venue: $venue.getVenueName()</h1>

<hr>

<form action="/venues/$venue.getVenueId()" method="post">
  <label for="update_venue">Update Venue</label>
  <input type="text" id="update_venue" name="update_venue" class="form-control">
  <br>
  <button id="update_venue_button" type="submit" class="btn btn-primary">Update Venue</button>
</form>

<br>
<a href="/venue/$venue.getVenueId()/delete" class="btn btn-danger">Warning: This will delete this venue!!!</a>

#if ($venue.getBands().size() != 0)
  <hr>
  <h4>List of Bands That Have Played at $venue.getVenueName()</h4>
  <ul>
    #foreach ($band in $venue.getBands())
      <li><a href="/venues/$venue.getVenueId()/bands/$band.getBandId()">$band.getBandName()</a></li>
    #end
  </ul>
#end

<hr>

<form action="/venues/$venue.getVenueId()/venueBand_form" method="post">
  <label for="band_input">Add a Band That Has Played at $venue.getVenueName()</label>
  <br>
  #foreach($band in $allBands)
    <input type="checkbox" class="band_input" name="band_input" value="$band.getBandId()"> $band.getBandName()<br>
  #end
  <br>
  <button id="add_band" type="submit" class="btn btn-success">Bands That Have Played at $venue.getVenueName()</button>
</form>

<hr>

<a href="/" class="btn btn-success">Home</a>
